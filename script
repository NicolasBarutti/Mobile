import React, { useState } from 'react';
import { View, Text, TextInput, Button } from 'react-native';

const App = () => {
  const [valor, setValor] = useState('');
  const [percentual, setPercentual] = useState('');
  const [resultado, setResultado] = useState(null);

  const calcular = () => {
    const v = parseFloat(valor);
    const p = parseFloat(percentual);

    if (!v || !p) {
      alert('Preencha os campos corretamente!');
      return;
    }

    const aumento = v * (p / 100);
    setResultado(v + aumento);
  };

  return (
    <View style={{ padding: 20 }}>
      <Text>Valor do Produto:</Text>
      <TextInput 
        keyboardType="numeric" 
        value={valor} 
        onChangeText={setValor} 
        style={{ borderWidth: 1, marginBottom: 10 }} 
      />

      <Text>Percentual de Aumento:</Text>
      <TextInput 
        keyboardType="numeric" 
        value={percentual} 
        onChangeText={setPercentual} 
        style={{ borderWidth: 1, marginBottom: 10 }} 
      />

      <Button title="Calcular" onPress={calcular} />

      {resultado && <Text style={{ marginTop: 20 }}>Novo Valor: R$ {resultado.toFixed(2)}</Text>}
    </View>
  );
};

export default App;